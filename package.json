{
  "name": "develog",
  "version": "1.0.0",
  "description": "A lightweight frontend logger that runs only in local/dev environments.",
  "license": "MIT",
  "author": "junjuny",
  "homepage": "https://github.com/junjuny0227/develog#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junjuny0227/develog.git"
  },
  "bugs": {
    "url": "https://github.com/junjuny0227/develog/issues"
  },
  "keywords": [
    "logger",
    "logging",
    "frontend",
    "console",
    "debug",
    "dev",
    "development",
    "local",
    "browser",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "pnpm run build"
  },
  "packageManager": "pnpm@10.26.0",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
